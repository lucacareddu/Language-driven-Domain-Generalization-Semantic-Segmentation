{
  "remote":0,
  
  "debug_mode":1,

  "gta":{
    "local_root":"/home/luca/data/gta",
    "remote_root":"/home/thesis/datasets/GTAV",
    "input_size":[1280,720]
  },

  "city":{
    "local_root":"/home/luca/data/cityscapes",
    "remote_root":"/home/thesis/datasets/Cityscapes",
    "input_size":[1024,512]
  },

  "preprocessing":{
    "crop_size":[512,512],
    "ignore_index":255
  },  
  
  "encoder":{
    "name":"tiny_clip",
    "use_text":1
  },

  "training":{
    "batch_size":2,
    "num_workers":4,
    "max_iterations":40000,
    "iters_per_val":4000,
    "log_dir":"logs",
    "do_checkpoints":1,
    "iters_per_save":4000,
    "checkpoint_dir":"checkpoints"
  },

  "grad_clip":{
    "enable":1,
    "small_model":0.1,
    "large_model":0.01
  },
  
  "optimizer":{
    "learning_rate":1e-5,
    "lr_power":1,
    "lr_warmup_iterations":1500
  }

}
